    max-width: 600px;
    margin: 2rem auto;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    overflow: hidden;
  }
  
  .card-header {
    padding: 1.25rem;
    border-bottom: 1px solid #e9ecef;
  }
  
  .card-header.no-bg {
    background-color: transparent;
    color: var(--dark-color);
  }
  
